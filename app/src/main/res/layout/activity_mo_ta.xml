<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MoTa">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/img_mota"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <TextView
        android:id="@+id/txt_motatenbaihat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:text="Ten bai hat"
        android:textColor="#25BDB8"
        android:textSize="30sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_motatencasi"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#25BDB8"
        android:text="Ten ca si"
        android:textSize="30sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_motatennnacsi"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_height="40dp"
        android:textColor="#25BDB8"
        android:text="Ten tac gia"
        android:textSize="30sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginTop="40dp"

        android:id="@+id/txt_mota"
        android:layout_marginLeft="30dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mo ta"
        android:textSize="30sp"
        android:textStyle="bold"/>
</LinearLayout>
</ScrollView>